<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--Город-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".DataBaseActivity">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/city_name_to_db"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/selectcityStr" />
    </android.support.design.widget.TextInputLayout>

    <!--Температура-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/temperature_to_db"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/temperatureStr" />
    </android.support.design.widget.TextInputLayout>

    <!--Ветер-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/wind_to_db"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/windStr" />
    </android.support.design.widget.TextInputLayout>

    <!--Давление-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/pressure_to_db"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pressureStr" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>






